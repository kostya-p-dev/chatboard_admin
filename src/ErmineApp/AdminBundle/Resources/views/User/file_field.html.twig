{% if field_name == 'imgFile'~(i)  and userfiles[ i] is defined %}
    <table>
        <tr>
            <td style="padding:10px; width:120px;"><img height="100" src="{{ userfiles[i].path }}"></td>
            <td>{{ form_row(form[field_name]) }}</td>
            <td>{% if userfiles[i].fileOrder == 1 %}
                    <a class="btn btn-sm btn-default delete_link" title="Delete" href="" fileId="0"><span style="color:green;">Primary</span></a>
                {% else %}
                    <a class="btn btn-sm btn-default delete_link hide-activity" title="Delete" href="" fileId="0"><i class="glyphicon glyphicon-remove"></i>Delete</a>
                {% endif %}
            </td>
        </tr>
    </table>
{% endif  %}